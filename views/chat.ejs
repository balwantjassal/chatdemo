<script src="/socket.io/socket.io.js"></script>
  <script>
      var socket = io();
      $(function () {
            var socket = io();
            $('form').submit(function(){
                 socket.emit('chat message', $('#m').val());
                 $('#m').val('');
                return false;
            });

            socket.on('client message', function(msg){
                    $('#messages').append($('<li>').text(msg));
             });
             socket.on('server message', function(msg){
                    $('#messages').append($('<li>').text(msg));
             });
        });

  </script>
